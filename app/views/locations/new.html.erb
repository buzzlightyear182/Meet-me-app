<h1>Create a new location</h1>

<% if @errors %>
<ul>
	<% @errors.each do |error| %>
	<li> <%= error %> </li>
	<% end %>
</ul>
<% end %>

<%= form_for @location do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %> <br/>
	<%= f.label :city %>
	<%= f.text_field :city %> <br/>
	<%= f.label :country %>
	<%= f.text_field :country %> <br/><br/>
	<%= f.submit "Save", class: "save" %>
<% end %>