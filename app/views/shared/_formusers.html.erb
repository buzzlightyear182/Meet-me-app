<% if @errors %>
<ul>
	<% @errors.each do |error| %>
	<li> <%= error %> </li>
	<% end %>
</ul>
<% end %>

Your user ID is: <%= @user.id %>
<br><br>
<%= form_for @user do |f| %>
	<%= f.label :user_name %>
	<%= f.text_field :user_name %> <br/>
	<%= f.label "Password" %>
	<%= f.text_field :password, autocomplete: "off", required: true, autofocus: true %> <br/>
	<%= f.label "Confirm password please:" %>
	<%= f.text_field :password_confirmation, autocomplete: "off", required: true %> <br/>
	<%= f.label :email %>
	<%= f.text_field :email %> <br/><br/>
	<%= f.submit "Save", class: "save" %>
<% end %>