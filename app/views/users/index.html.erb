<h1>User List</h1>

<ul>
	<% @users.each do |user| %>
	<li>
		<% if user.user_name.present? %>
			User ID: <b><%= user.id %></b> -
			<%= user.user_name %><br>
		<% end %>
		<%= user.email %>
		<button class ='edit'>
			<%= link_to "Edit", edit_user_path(:id => user.id), method: 'get' %>
		</button>
		<button class ='delete'>
			<%= link_to "Delete", user_path(user.id), method: 'delete', confirm: 'Are you sure?' %>
		</button>
		</li>
	<% end %>
</ul>
<button class = 'new'>
<%= link_to "Create a new user", new_user_path, method: 'get' %>
</button>